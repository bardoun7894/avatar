# Avatar Backend Environment Variables

# ==========================================
# LiveKit Configuration
# ==========================================
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ==========================================
# OpenAI Configuration
# ==========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# ==========================================
# Tavus AI Configuration (if using Tavus)
# ==========================================
TAVUS_API_KEY=your_tavus_api_key
TAVUS_MODEL_ID=your_tavus_model_id

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://avatar:password@localhost:5432/avatar
# For SQLite (development):
# DATABASE_URL=sqlite:///./avatar.db

# ==========================================
# Agent Configuration
# ==========================================
AGENT_NAME=Ornina AI
AGENT_TIMEOUT=600
MAX_CONCURRENT_SESSIONS=5

# ==========================================
# Server Configuration
# ==========================================
HOST=0.0.0.0
PORT=8080
LOG_LEVEL=INFO
DEBUG=False

# ==========================================
# Redis Configuration (optional)
# ==========================================
REDIS_URL=redis://redis:6379
REDIS_DB=0

# ==========================================
# Knowledge Base Configuration
# ==========================================
KB_ENABLED=True
KB_INDEX_PATH=./kb/vectors
KB_SIMILARITY_THRESHOLD=0.7

# ==========================================
# Voice Configuration
# ==========================================
VOICE_PROVIDER=openai  # or elevenlabs, google
VOICE_ID=alloy
VOICE_RATE=1.0

# ==========================================
# Logging Configuration
# ==========================================
LOG_FILE_PATH=./logs/avatar.log
LOG_MAX_SIZE=10485760  # 10MB
LOG_BACKUP_COUNT=5
