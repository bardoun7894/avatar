# Call Center Backend Environment Variables

# ==========================================
# LiveKit Configuration
# ==========================================
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_livekit_api_key
LIVEKIT_API_SECRET=your_livekit_api_secret

# ==========================================
# OpenAI Configuration (Used for STT, LLM, TTS)
# ==========================================
OPENAI_API_KEY=your_openai_api_key
OPENAI_MODEL=gpt-4
OPENAI_TEMPERATURE=0.7

# ==========================================
# Text-to-Speech Configuration
# ==========================================
# Using OpenAI TTS via LiveKit Agent Framework
TTS_MODEL=tts-1
TTS_VOICE=nova  # Works best for Arabic and English

# ==========================================
# ElevenLabs Configuration (Optional Fallback)
# ==========================================
# ELEVENLABS_API_KEY=your_elevenlabs_api_key
# ELEVENLABS_VOICE_ID=your_voice_id

# ==========================================
# Database Configuration
# ==========================================
DATABASE_URL=postgresql://callcenter:password@localhost:5432/callcenter
# For SQLite (development):
# DATABASE_URL=sqlite:///./callcenter.db

# ==========================================
# Call Center Settings
# ==========================================
MAX_AGENTS=10
CALL_TIMEOUT=300
MAX_QUEUE_SIZE=50
IVR_TIMEOUT=30

# ==========================================
# Server Configuration
# ==========================================
HOST=0.0.0.0
PORT=8000
LOG_LEVEL=INFO
DEBUG=False

# ==========================================
# Redis Configuration (optional)
# ==========================================
REDIS_URL=redis://redis:6379
REDIS_DB=0

# ==========================================
# Sentiment Analysis Settings
# ==========================================
ENABLE_SENTIMENT_ANALYSIS=True
SENTIMENT_THRESHOLD=0.5

# ==========================================
# CRM Integration
# ==========================================
CRM_ENABLED=True
CRM_API_KEY=your_crm_api_key
CRM_API_URL=http://localhost:8001

# ==========================================
# Email Notifications (optional)
# ==========================================
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
NOTIFICATION_EMAIL=admin@company.com
